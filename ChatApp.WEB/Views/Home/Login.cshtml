@model ChatApp.Domain.Entities.Member



<form asp-controller="home" asp-action="login">
    <table style="color:wheat">
        <tr>
            <td>Kullanıcı Adı:</td>
            <td><input type="text" asp-for="UserName" /></td>
        </tr>
        <tr>
            <td>Şifre</td>
            <td><input type="password" asp-for="UserPass" /></td>
        </tr>
        <tr>
            <td colspan="2"><button>Giriş Yap</button></td>
        </tr>
        <tr>
            <td colspan="2">
                @if (TempData["LoginErr"] != null)
                {
                    <h1>Oturum açma hatası</h1>
                }
            </td>
        </tr>
    </table>
</form>